<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/nav_item_background"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_nav_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_edit_tab"
        android:tint="@color/bottom_nav_unselected" />

    <TextView
        android:id="@+id/tv_nav_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa"
        android:textColor="@color/bottom_nav_unselected"
        android:textSize="10sp"
        android:textAlignment="center"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Indicator line for selected state -->
    <View
        android:id="@+id/view_indicator"
        android:layout_width="24dp"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@color/bottom_nav_indicator"
        android:visibility="gone" />

</LinearLayout>